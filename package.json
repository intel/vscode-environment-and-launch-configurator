{
	"name": "oneapi-devflow",
	"displayName": "DevFlow for Intel oneAPI Toolkits",
	"description": "Lightweight extension that simplifies developer flow for oneAPI.",
	"version": "0.0.27",
	"license": "MIT",
	"icon": "media/icon.png",
	"publisher": "intel-corporation",
	"engines": {
		"vscode": "^1.46.0"
	},
	"enableProposedApi": true,
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:oneapi-devflow.generateLaunchJson",
		"onCommand:oneapi-devflow.generateTaskJson",
		"onCommand:oneapi-devflow.openShell"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "oneapi-devflow.generateLaunchJson",
				"title": "oneAPI: Generate launch configurations"
			},
			{
				"command": "oneapi-devflow.generateTaskJson",
				"title": "oneAPI: Generate tasks"
			},
			{
				"command": "oneapi-devflow.openShell",
				"title": "oneAPI: Open oneAPI terminal"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"package": "vsce package --yarn",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"vsce": "^1.81.1"
	}
}